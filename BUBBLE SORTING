#include <stdio.h>

void main() {
    int n;
    printf("Enter the length of array: ");
    scanf("%d", &n);
    int a[n]; 

    
    printf("Enter the elements to be stored: ");
    for(int x = 0; x < n; x++) {
        scanf("%d", &a[x]);
    }

    
    printf("Array before Bubble sort: \n");
    for(int y = 0; y < n; y++) {
        printf("%d ", a[y]);
    }
    printf("\n");

    
    for(int i = 0; i < n - 1; i++) {
        for(int j = 0; j < n - i - 1; j++) {
            if(a[j] > a[j + 1]) {
                int temp = a[j];
                a[j] = a[j + 1];
                a[j + 1] = temp;
            }
        }
    }

    printf("Array after Bubble sort: \n");
    for(int y = 0; y < n; y++) {
        printf("%d ", a[y]);
    }
    printf("\n");
}
